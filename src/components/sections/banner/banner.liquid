   <!-- Featured section -->
    <section aria-labelledby="comfort-heading" class="max-w-7xl mx-auto py-medium px-4 sm:py-large sm:px-6 lg:px-8">
      <div class="relative rounded-large overflow-hidden">
        <div class="absolute inset-0">
          <img src="{{section.settings.image | image_url: width: '2000'  }}" lazy alt="" class="w-full h-full object-center object-cover">
        </div>
        <div class="relative bg-gray-900 bg-opacity-75 py-large px-6 sm:py-40 sm:px-12 lg:px-16">
          <div class="relative max-w-3xl mx-auto flex flex-col items-center text-center">
            <h2 id="comfort-heading" class="text-3xl font-extrabold tracking-tight text-white sm:text-4xl">{{ section.settings.title }}</h2>
            <p class="mt-3 text-xl text-white">{{ section.settings.content }}</p>
            <a href="{{ section.settings.buttonurl }}" class="mt-8 w-full block bg-white border border-transparent rounded-medium py-3 px-8 text-base font-medium text-headerColor hover:bg-offBG sm:w-auto">{{ section.settings.buttontext }}</a>
          </div>
        </div>
      </div>
    </section>

{% schema %}
  {
    "name": "banner",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Banner"
        },
        {
          "type": "text",
          "id": "content",
          "label": "Content"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "buttontext",
          "label": "Button text"
        },
        {
          "type": "url",
          "id": "buttonurl",
          "label": "url"
        }
      ],	
      "presets": [
      {
        "name": "Image Banner",
        "settings": {
          "title": "Image Banner"
        }
      }
      ],
    "templates": ["article", "index", "page", "product"]
  }
{% endschema %}
