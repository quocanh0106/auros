

<div class="group relative">
  <a href="{{ product.url }}">
      <div class="w-full min-h-80 bg-gray-200 aspect-w-1 aspect-h-1 rounded-medium overflow-hidden lg:h-80 lg:aspect-none">
        <img src="{{ product.featured_image | image_url: width: '240' }}" lazy alt="{{ product.featured_image.alt }}" class="w-full h-full object-center object-cover lg:w-full lg:h-full hover:scale-[105%] transition-all">
      </div>
      <div class="mt-4 flex justify-between">
        <div>
          <h3 class="text-sm text-headerColor font-medium">
            {{ product.title }}
          </h3>
          <p class="mt-1 text-sm text-copyColor">{{ product.vendor }}</p>
        </div>
        <p class="text-sm font-medium text-headerColor">{{ product.price | money }}</p>
      </div>

      
  </a>
</div>
